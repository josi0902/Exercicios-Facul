        "#Programa para calcular o valor mensal de um plano de saude.\n",
        "\n",
        "#Nome do cliente\n",
        "print('Bem vindo, Josimar Vieira')\n",
        "\n",
        "valorBase = float(input(\"Digite o valor base do plano:\"))\n",
        "idade = int(input(\"Digite a idade do cliente:\"))\n",
        "#Valores e percentagem\n",
        "if idade >= 0 and idade <19:\n",
        "  porcentagem = 100\n",
        "elif idade >= 19 and idade < 29:\n",
        "  porcentagem = 150\n",
        "elif idade >= 29 and idade < 39:\n",
        "  porcentagem = 225\n",
        "elif idade >= 39 and idade < 49:\n",
        "  porcentagem = 240\n",
        "elif idade >= 49 and idade < 59:\n",
        "  porcentagem = 350\n",
        "else: # idade >= 59\n",
        "  porcentagem = 600\n",
        "\n",
        "valorMensal = valorBase * (porcentagem / 100)\n",
        "\n",
        "print(f\"O valor mensal do plano é R$ {valorMensal:.2f}\")"
