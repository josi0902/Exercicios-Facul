        "#Nome e menu\n",
        "print('Bem vindo, Josimar Vieira')\n",
        "\n",
        "print('Menu')\n",
        "print('Tamanho P: PS: R$ 30 - PD: R$ 34')\n",
        "print('Tamnho M; PS: R$ 45 - PD: R$ 48')\n",
        "print('Tamanho G: PS: R$ 60 - P: R$ 66')\n",
        "\n",
        "total = 0\n",
        "\n",
        "while True:\n",
        "#Solicitação do sabor\n",
        "  sabor = input('Digite o sabor desejado (PS para Salgada / PD para doce):').upper()\n",
        "\n",
        "  if sabor != 'PS' and sabor != 'PD':\n",
        "    print('Sabor inválido. Tente Novamente')\n",
        "    continue\n",
        "#solicitação do tamanho\n",
        "  else:\n",
        "    tamanho = input('Digite o tamanho desejado (P, M ou G):').upper()\n",
        "    if tamanho != 'P' and tamanho != 'M' and tamanho != 'G':\n",
        "      print('Tamanho inválido. Tente Novamente')\n",
        "      continue\n",
        "    else:\n",
        "      if sabor =='PS':\n",
        "        preco = 30\n",
        "        if tamanho == 'P':\n",
        "          preco = 30\n",
        "        elif tamanho == 'M':\n",
        "          preco = 45\n",
        "        elif tamanho == 'G':\n",
        "          preco = 60\n",
        "      else:\n",
        "        if sabor == 'PD':\n",
        "          preco = 34\n",
        "          if tamanho == 'P':\n",
        "            preco = 34\n",
        "          elif tamanho == 'M':\n",
        "            preco = 48\n",
        "          elif tamanho == 'G':\n",
        "            preco = 66\n",
        "\n",
        "    total += preco\n",
        "#preço\n",
        "    print(f'Valor a Pagar: R${preco:.2f}')\n",
        "\n",
        "  mais = input('Deseja pedir mais alguma coisa? (S/N)').upper()\n",
        "\n",
        "  if mais == 'S':\n",
        "    continue\n",
        "  elif mais == 'N':\n",
        "    break\n",
        "  else:\n",
        "    print(\"Opção Invalida! Encerrando o pedido por segurança\")\n",
        "    break\n",
        "\n",
        "#mensagem final\n",
        "print('Pedido encerrado!')\n",
        "print(f'Valor Total: R${total:.2f}')\n",
        "print('Obrigado por comprar na pizzaria do Josimar!')"
      ]
